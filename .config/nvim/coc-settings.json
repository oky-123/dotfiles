{
  "coc.preferences.formatOnSaveFiletypes": [
    "java",
    "rust",
    "python",
    "cpp",
    "ruby",
    "go",

    "html",
    "css",
    "vue",
    "javascript",
    "typescript",

    "yaml",
    "json"
  ],

  "java.configuration.runtimes": [
    {
      "name": "OpenJDK 11",
      "path": "/opt/homebrew/Cellar/openjdk@11/11.0.12/libexec/openjdk.jdk/Contents/Home"
    },
    {
      "name": "OpenJDK 17",
      "path": "/opt/homebrew/Cellar/openjdk/17/libexec/openjdk.jdk/Contents/Home"
    }
  ],
  "java.jdt.ls.vmargs": "-javaagent:/Users/oky123/.lsp/lombok.jar -Xbootclasspath/a:/Users/oky123/.lsp/lombok.jar",

  "eslint.filetypes": ["javascript", "vue", "typescript"],
  "eslint.autoFixOnSave": false,

  "volar.takeOverMode.enabled": true,

  "tsserver.enable": true,

  "solargraph.formatting": true,
  "solargraph.diagnostics": true,
  "solargraph.transport": "external",
  "solargraph.externalServer": {
    "host": "localhost",
    "port": 7659
  },

  "diagnostic-languageserver.formatFiletypes": {
    "python": ["black"]
  },
  "diagnostic-languageserver.formatters": {
    "black": {
      "command": "black",
      "args": ["-q", "-"]
    }
  }
}
